<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:hedgehog="http://schemas.android.com/apk/res-auto"
    android:layout_width="@dimen/save_record_dialog_width"
    android:layout_height="@dimen/save_record_dialog_height"
    android:padding="@dimen/fab_margin"
    tools:context="com.beast.bkara.dialogfragments.RatingDialogFragment">

    <TextView
        android:id="@+id/frag_rating_record_textview_title"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textColor="?attr/colorPrimary"
        android:text="RATE THIS SONG"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <com.beast.bkara.util.RatingBarView
        android:id="@+id/frag_rating_record_ratingbar"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        hedgehog:starEmpty="@drawable/ic_star_empty"
        hedgehog:starFill="@drawable/ic_star_full"
        hedgehog:starHalf="@drawable/ic_star_half"
        hedgehog:starCount="5"
        hedgehog:clickable="true"
        hedgehog:starImageSize="50dp" />

    <TextView
        android:id="@+id/frag_rating_record_textview_rate"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:textColor="?attr/colorAccent"
        android:text="RATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/frag_rating_record_textview_cancel"
        android:layout_marginRight="@dimen/fab_margin_big"
        android:layout_toLeftOf="@id/frag_rating_record_textview_rate"
        android:layout_alignParentBottom="true"
        android:textColor="?attr/colorAccent"
        android:text="CANCEL"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
