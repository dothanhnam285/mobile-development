<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".fragments.AboutFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="BKARA"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="for Android"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:textStyle="italic" />

            <View style="@style/Divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="DEVELOPMENT TEAM"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Developer A"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Developer B"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="Developer C"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <View style="@style/Divider" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="CONTACT"
                android:textAppearance="@android:style/TextAppearance.Large"
                android:textColor="?attr/colorPrimary"
                android:textStyle="bold" />

            <Button
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_call"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="090 696 969"
                android:layout_marginTop="20dp"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <Button
                android:id="@+id/frag_playlist_add"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@android:color/transparent"
                android:drawableLeft="@drawable/ic_mail"
                android:drawablePadding="10dp"
                android:gravity="left|center_vertical"
                android:paddingLeft="10dp"
                android:text="weedteam@gmail.com"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:layout_marginTop="50dp"
                android:text="Version 1.0.0"
                android:textAppearance="@android:style/TextAppearance.Medium" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:text="All right reserved"
                android:textAppearance="@android:style/TextAppearance.Medium"
                android:layout_weight="1" />

        </LinearLayout>

    </ScrollView>

</FrameLayout>
