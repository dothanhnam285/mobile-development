<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:gravity="bottom"
    android:orientation="horizontal"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">

    <com.github.siyamed.shapeimageview.CircularImageView
        android:id="@+id/imageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:adjustViewBounds="true"
        android:src="@drawable/img_account"
        app:siBorderWidth="3dp"
        app:siBorderColor="@color/colorLightBlueDark"
        android:layout_gravity="center_vertical"
        />

    <LinearLayout
        android:layout_marginLeft="15dp"
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical">

        <TextView
            android:id="@+id/nav_header_tv_login"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Login"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:clickable="true"
            android:onClick="login"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/nav_header_tv_welcome"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="UserHasALongName"
            android:textAppearance="@style/TextAppearance.AppCompat.Headline"
            android:clickable="true"
            android:visibility="gone"
            android:textSize="25sp"
            android:ellipsize="marquee"
            android:singleLine="true"
            />

        <TextView
            android:id="@+id/nav_header_tv_logout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:textAppearance="@style/TextAppearance.AppCompat.Widget.Button"
            android:clickable="true"
            android:onClick="logout"
            android:visibility="gone"
            android:textSize="15sp"/>

        <!--<TextView
            android:layout_marginTop="8dp"
            android:id="@+id/nav_header_tv_register"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Join BKara"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:clickable="true" />-->
    </LinearLayout>

</LinearLayout>
